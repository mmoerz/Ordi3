{% macro onescreen_begin(spec) %}

{% set spec = spec or {} %}
{% set _id = spec.id or '' %}
{% set _class = spec.class or '' %}
{% set _text = spec.text or 'Empty - Content Missing' %}
{% if onescreen_toggle == 'screen_odd' %}
  {% set onescreen_toggle = 'screen_even' %}
{% else %}
  {% set onescreen_toggle = 'screen_odd' %}
{% endif %}

<div
  id="{{_id}}"
  class="{{_class}} {{onescreen_toggle}}"
>
{% endmacro %}

{% macro onescreen_end() %}
</div>
{% endmacro %}


