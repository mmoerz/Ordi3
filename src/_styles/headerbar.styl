.ordi-headerbar
  background-color font-color
  color back-color
  padding-left 1.5rem
  padding-right 1.5rem
  line-height 1.5rem
  font-size 1.2rem

.ordi-navbar-trigger
  line-height 3.5rem
  font-size 2rem
  padding-right 1.5rem

.ordi-headerbar-nav
  -webkit-box-flex 1
  -ms-flex 1
  flex 1
  line-height 3.5rem
  ul
      -webkit-padding-start 0px
      margin 0 0 0 0.5em
      padding 0em
  li
    margin-bottom 20px
    margin-left 10px
    margin-right 10px
    padding 0 1.5rem
  a
    color #ffffff
    text-decoration none
  a:hover,
  a:focus
    color #ffffff
    outline 0


.ordi-headerbar-nav-item::before
    content "";

.ordi-headerbar-nav-item.active::after
    content "";
    display block
    height 4px
    background #eeeeee
