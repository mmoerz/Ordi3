headerbar-height = 3.5rem

.ordi-headerbar
  background-color #ffffff
  color font-color
  padding-left 1.5rem
  padding-right 1.5rem
  line-height 1.5rem
  font-size 1.2rem
  z-index 999
  box-shadow 0 0 5px 2px rgba(0,0,0,.1)

.ordi-navbar-trigger
  line-height headerbar-height
  font-size 2rem
  padding-right 1.5rem

.ordi-headerbar-nav
  -webkit-box-flex 1
  -ms-flex 1
  flex 1
  line-height headerbar-height
  ul
      -webkit-padding-start 0px
      margin 0 0 0 0.5em
      padding 0em
  li
    margin-bottom 20px
    margin-left 10px
    margin-right 10px
    padding 0 1.5rem
  a
    color font-color
    text-decoration none
  a:hover,
  a:focus
    color font-color
    outline 0


.ordi-headerbar-nav-item::before
    content "";

.ordi-headerbar-nav-item.active::after
    content "";
    display block
    height 4px
    background font-color

