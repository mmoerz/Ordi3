@import 'colors.styl'
@import 'misc_mixins.styl'

@import 'headerbar.styl'
@import 'navbar.styl'

.mx-auto
  margin-left auto

.mr-auto, .mx-auto
  margin-right auto

.top-0
  top 0

.nobox
  margin-top 0
  padding-top 0
  margin-left 0
  padding-left 0
  margin-right 0
  padding-right 0

.left-0
  left 0

.right-0
  right 0 

.flex
  display: flex

.m0
  margin 0

.p0
  padding 0

.items-center
  -webkit-box-align center
  -ms-flex-align center
  align-itmes center

.fixed
  position fixed

#sidebar
  color font-color
  background back-color
  ul
    font-decoration none
    list-style none
    margin-left: 1rem
    padding-left: 0
  li
    margin-top: 0.5rem

@media screen and (min-width: 480px)
  .md-hide
    display none

@media screen and (min-width: 1024px)
  .lg-hide
    display none

@media screen and (min-width: 40rem) and (max-width: 52rem)
  .sm-hide
    display none

@media screen and (max-width: 40rem)
  .xs-hide
    display none
