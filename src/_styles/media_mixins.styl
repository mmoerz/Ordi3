mobile-width = 450px
tablet-width = 768px
desktop-width = 1024px
desktop-big-width = 1600px

smallmobile()
  @media (max-width: mobile-width)
    {block}

mobile()
  @media (min-width: mobile-width) and (max-width: tablet-width - 1px)
    {block}

tablet()
  @media screen and  (min-width: tablet-width) and (max-width: desktop-width - 1px) 
    {block}

desktop()
  @media screen and  (min-width: desktop-width) and (max-width: desktop-big-width - 1px)
    {block}

